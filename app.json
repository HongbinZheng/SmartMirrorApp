{
  "expo": {
    "name": "SmartMirrorApp",
    "slug": "SmartMirrorApp",
    "privacy": "public",
    "sdkVersion": "35.0.0",
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "smart.mirror.googlesignin",
      "config":{
        "googleSignIn":{
          "reservedClientId":"<YOUR_IOS_CLIENT_ID>"
        }
      }

    },
    "android": {
      "package": "smart.mirror.googlesignin",
      "googleServicesFile":"./google-services.json",
      "config": {
        "googleSignIn": {
            "certificateHash": "YOUR HASH"
        }
    }
    }
  }
}